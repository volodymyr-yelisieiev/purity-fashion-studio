{
  "name": "purity-fashion-studio",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "prebuild": "payload migrate",
    "build": "payload generate:importmap && next build",
    "build:vercel": "pnpm migrate && pnpm build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "payload": "payload",
    "generate:types": "payload generate:types",
    "migrate": "payload migrate",
    "migrate:create": "payload migrate:create",
    "migrate:status": "payload migrate:status",
    "migrate:fresh": "payload migrate:fresh",
    "seed": "tsx scripts/seed.ts",
    "vercel:link": "vercel link",
    "vercel:env:pull": "vercel env pull .env.local",
    "vercel:seed": "vercel env pull .env.local && pnpm seed",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "check": "pnpm typecheck && pnpm lint --max-warnings=0 && pnpm format:check",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "@parcel/watcher",
      "@swc/core",
      "esbuild"
    ],
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "undici@<6.23.0": ">=6.23.0"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@payloadcms/db-postgres": "^3.72.0",
    "@payloadcms/next": "^3.72.0",
    "@payloadcms/plugin-seo": "^3.72.0",
    "@payloadcms/richtext-lexical": "^3.72.0",
    "@payloadcms/storage-vercel-blob": "^3.72.0",
    "@payloadcms/ui": "^3.72.0",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.32.0",
    "graphql": "^16.12.0",
    "lexical": "0.35.0",
    "lucide-react": "^0.562.0",
    "next": "^16.1.3",
    "next-intl": "^4.7.0",
    "payload": "^3.72.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "resend": "^6.7.0",
    "sharp": "^0.34.5",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.3",
    "jsdom": "^28.0.0",
    "msw": "^2.12.9",
    "pg": "^8.17.1",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vercel": "^50.13.2",
    "vitest": "^4.0.18"
  }
}
