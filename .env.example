# =====================================================
# PURITY Fashion Studio - Environment Variables
# =====================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local or any file containing secrets!
# =====================================================

# -----------------------------------------------------
# DEVELOPMENT MODE (Optional)
# -----------------------------------------------------
# Set to 'true' to run without Postgres/Docker
# Useful for frontend development and CI/CD
# Note: /admin and DB-dependent APIs won't work in offline mode

# -----------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/purity"

# -----------------------------------------------------
# PAYLOAD CMS (Required)
# -----------------------------------------------------
# Secret key for Payload authentication (min 32 characters)
# Generate with: openssl rand -base64 32
PAYLOAD_SECRET="your-super-secret-key-at-least-32-characters"

# -----------------------------------------------------
# SITE CONFIGURATION
# -----------------------------------------------------
# Public site URL (used for callbacks, emails, SEO)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# -----------------------------------------------------
# STRIPE PAYMENTS (Optional)
# Get keys from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------
# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=""

# Stripe Publishable Key (starts with pk_test_ or pk_live_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Stripe Webhook Secret (starts with whsec_)
# Get from: https://dashboard.stripe.com/webhooks
# For local testing: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET=""

# -----------------------------------------------------
# VERCEL BLOB STORAGE (Required for Media)
# -----------------------------------------------------
# Vercel Blob Read/Write Token
# Get from: Vercel Dashboard -> Storage -> Blob -> Settings -> Token
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your_token_here"

# -----------------------------------------------------
# LIQPAY PAYMENTS (Optional)
# Get keys from: https://www.liqpay.ua/account/settings
# -----------------------------------------------------
# LiqPay Public Key
LIQPAY_PUBLIC_KEY=""

# LiqPay Private Key
LIQPAY_PRIVATE_KEY=""

# -----------------------------------------------------
# EMAIL (Optional - Resend)
# Get API key from: https://resend.com/api-keys
# -----------------------------------------------------
# Resend API Key
RESEND_API_KEY=""

# From email address (must be verified in Resend)
EMAIL_FROM="PURITY <noreply@purityfashion.studio>"

# -----------------------------------------------------
# DEVELOPMENT OPTIONS
# -----------------------------------------------------
# Node environment
NODE_ENV="development"

# Enable TypeScript strict mode
# TS_NODE_STRICT="true"

# -----------------------------------------------------
# RATE LIMITING (Optional - Upstash Redis)
# For production serverless environments
# Get keys from: https://console.upstash.com/
# -----------------------------------------------------
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# -----------------------------------------------------
# SMOKE TESTS
# -----------------------------------------------------
TEST_ADMIN_EMAIL="test-admin@purity-test.local"
TEST_ADMIN_PASSWORD="your-test-password"

# =====================================================
# VERCEL CLI WORKFLOW
# =====================================================
# To connect to your Vercel deployment and seed the production DB:
#   1. pnpm vercel:link        — link local project to Vercel
#   2. pnpm vercel:env:pull    — pull production env vars to .env.local
#   3. pnpm vercel:seed        — pull env + seed the connected Neon DB
# =====================================================
